<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="657" Width="1027" xmlns:my="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*" />
            <ColumnDefinition Width="734*" />
        </Grid.ColumnDefinitions>
        <my:KinectSensorChooser Grid.Column="1" HorizontalAlignment="Left" Margin="280,365,0,0" Name="kinectSensorChooser1" VerticalAlignment="Top" Width="328" Height="212" />
        <my:KinectColorViewer Grid.Column="1" HorizontalAlignment="Left" Margin="135,140,0,0" Name="kinectColorViewer1" VerticalAlignment="Top" Height="160" Width="281" Kinect="{Binding ElementName=kinectSensorChooser1, Path=Kinect}" />
        <my:KinectSkeletonViewer Grid.Column="1" HorizontalAlignment="Right" Margin="0,140,43,0" Name="kinectSkeletonViewer1" VerticalAlignment="Top" Height="160" Width="275" Kinect="{Binding ElementName=kinectSensorChooser1, Path=Kinect}" />
    </Grid>
</Window>
